# ============================================
# APPLICATION ENVIRONMENT
# ============================================
APP_ENV=production
APP_NAME="Chill Puff"
APP_DEBUG=false
APP_URL=http://localhost/pos-cp

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=pos-cp
DB_USERNAME=root
DB_PASSWORD=

# ============================================
# LIVE SERVER DATABASE CONFIGURATION
# ============================================
