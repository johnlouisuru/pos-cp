# ============================================
# SESSION & SECURITY
# ============================================
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
ENCRYPTION_KEY=your-32-character-encryption-key-here

# ============================================
# MAIL CONFIGURATION (For receipts/reports)
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=app-specific-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="POS System"

# ============================================
# FILE UPLOADS (For product images, etc.)
# ============================================
FILE_UPLOAD_MAX_SIZE=5242880  # 5MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf
UPLOADS_DIR=public/uploads

# ============================================
# CACHE & PERFORMANCE
# ============================================
CACHE_DRIVER=file
CACHE_LIFETIME=3600
QUEUE_CONNECTION=sync

# ============================================
# BUSINESS SPECIFIC CONFIGURATIONS
# ============================================
BUSINESS_NAME="Your Business Name"
BUSINESS_ADDRESS="123 Business St, City"
BUSINESS_PHONE="+1 (555) 123-4567"
BUSINESS_EMAIL="business@email.com"
BUSINESS_TAX_RATE=0.12  # 12%
BUSINESS_CURRENCY="PHP"
BUSINESS_TIMEZONE=Asia/Manila
BUSINESS_ICON="uploads/cp.png"

# ============================================
# RECEIPT/INVOICE SETTINGS
# ============================================
RECEIPT_PREFIX=INV
RECEIPT_START_NUMBER=1000
RECEIPT_FOOTER="Thank you for your purchase!"
SHOW_TAX_ON_RECEIPT=true
SHOW_DISCOUNT_ON_RECEIPT=true

# ============================================
# INVENTORY SETTINGS
# ============================================
LOW_STOCK_THRESHOLD=10
ENABLE_STOCK_ALERTS=true
AUTO_BACKUP_INVENTORY=true
BACKUP_SCHEDULE=daily

# ============================================
# USER & AUTHENTICATION SETTINGS
# ============================================
LOGIN_ATTEMPTS_LIMIT=5
LOGIN_LOCKOUT_TIME=900  # 15 minutes in seconds
PASSWORD_MIN_LENGTH=8
ENABLE_2FA=false

# ============================================
# REPORTING & ANALYTICS
# ============================================
SALES_REPORT_RETENTION_DAYS=365
ENABLE_SALES_ANALYTICS=true
AUTO_GENERATE_DAILY_REPORT=true
DAILY_REPORT_TIME=23:59

# ============================================
# THIRD-PARTY INTEGRATIONS (If needed)
# ============================================
PAYMENT_GATEWAY_ENABLED=false
PAYMENT_GATEWAY_API_KEY=
PAYMENT_GATEWAY_SECRET=
PRINTER_INTEGRATION_ENABLED=false
PRINTER_IP=192.168.1.100
PRINTER_PORT=9100